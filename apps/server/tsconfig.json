{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ES2022",
        "esModuleInterop": true,
        "moduleResolution": "node",
        "skipLibCheck": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "./dist",
        "rootDir": "./src",
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true,
        "sourceMap": true,
        "noImplicitAny": true,
        "noFallthroughCasesInSwitch": true,
        "useUnknownInCatchVariables": false
    },
    "include": [
        "src/**/*.ts",
        "env.d.ts",
        "fastify.d.ts"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}